{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/server",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es5",
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "lib": [
        "dist/lib"
      ],
      "my-lib": [
        "dist/my-lib"
      ]
    },
  },
  "include": [
    "./server/**/*.ts"
  ],
  "exclude": [
    "./server/**/*.test.ts"
  ]
}
